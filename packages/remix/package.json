{
  "name": "remix",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "typecheck": "tsc",
    "build": "pnpm build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css && tailwindcss -m -i ./styles/preflight.css -o app/styles/preflight.css",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css && tailwindcss -m -i ./styles/preflight.css -o app/styles/preflight.css",
    "deploy": "wrangler publish",
    "dev:remix": "remix watch",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "dev": "remix build && run-p \"dev:*\"",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js"
  },
  "dependencies": {
    "@clerk/remix": "^2.0.6",
    "@conorroberts/beluga": "^1.0.59",
    "@heroicons/react": "^2.0.13",
    "@remix-run/cloudflare": "^1.11.1",
    "@remix-run/cloudflare-workers": "^1.11.1",
    "@remix-run/react": "^1.11.1",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "isbot": "^3.6.5",
    "nanoid": "^4.0.0",
    "prisma": "workspace:^0.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "superjson": "^1.12.2",
    "ulid": "^2.3.0",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.18.0",
    "@remix-run/dev": "^1.11.1",
    "@remix-run/eslint-config": "^1.11.1",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "concurrently": "^7.6.0",
    "eslint": "^8.27.0",
    "miniflare": "^2.11.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.8.4",
    "wrangler": "^2.2.1"
  },
  "engines": {
    "node": ">=14"
  }
}
